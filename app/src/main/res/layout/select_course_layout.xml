<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cz.spurny.CreateGame.SelectCourse"
    android:id="@+id/SelectCourse_tableLayout"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/SelectCourse_tableRow_Course1"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/SelectCourse_string_Course"
            android:id="@+id/SelectCourse_textView_Course1" />
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_tabHost1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TabHost
            android:id="@+id/SelectCourse_tabHost_course1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1" >

            <HorizontalScrollView
                android:id="@+id/SelectCourse_horizontalScrollView_course1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp" >
            </FrameLayout>
        </TabHost>
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_Tee1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/SelectCourse_string_Tee"
            android:id="@+id/SelectCourse_textView_Tee1" />
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_tabHost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TabHost
            android:id="@+id/SelectCourse_tabHost_tee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1" >

            <HorizontalScrollView
                android:id="@+id/SelectCourse_horizontalScrollView_tee1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp" >
            </FrameLayout>
        </TabHost>
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_Course2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/SelectCourse_string_Course"
            android:id="@+id/SelectCourse_textView_Course2" />
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_tabHost3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TabHost
            android:id="@+id/SelectCourse_tabHost_course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1" >

            <HorizontalScrollView
                android:id="@+id/SelectCourse_horizontalScrollView_course2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp" >
            </FrameLayout>
        </TabHost>
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_Tee2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/SelectCourse_string_Tee"
            android:id="@+id/SelectCourse_textView_Tee2" />
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_tabHost4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TabHost
            android:id="@+id/SelectCourse_tabHost_tee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1" >

            <HorizontalScrollView
                android:id="@+id/SelectCourse_horizontalScrollView_tee2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp" >
            </FrameLayout>
        </TabHost>
    </TableRow>

    <TableRow
        android:id="@+id/SelectCourse_tableRow_space"
        android:layout_weight="1">
    </TableRow>


    <TableRow
        android:id="@+id/SelectCourse_tableRow_createGame"
        android:layout_width="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SelectCourse_string_CreateGame"
            android:id="@+id/SelectCourse_button_CreateGame"
            android:layout_weight="1" />
    </TableRow>

</TableLayout>
